<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
	android:id="@+id/layout" >
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/room" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="504dp"
            android:orientation="vertical" >

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Реле 1" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Реле 2" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Реле 3" />

            <Switch
                android:id="@+id/switch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Реле 4" />
            
             <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="14dp"
                    android:layout_row="0"
                    android:text="Температура:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/tem"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right|bottom"
                    android:layout_row="0"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|bottom"
                    android:layout_row="1"
                    android:text="Влажность:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/hum"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right|bottom"
                    android:layout_marginTop="20dp"
                    android:layout_row="1"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </GridLayout>

            <Switch
                android:id="@+id/switch5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:clickable="false"
                android:text="Кнопка 1"
                android:textOff="         "
                android:textOn="         " />

            <Switch
                android:id="@+id/switch6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="Кнопка 2"
                android:textOff="         "
                android:textOn="         " />

            <Switch
                android:id="@+id/switch7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="Кнопка 3"
                android:textOff="         "
                android:textOn="         " />

            <Switch
                android:id="@+id/switch8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="Кнопка 4"
                android:textOff="         "
                android:textOn="         " />

            <Switch
                android:id="@+id/dd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Датчик движения 1" />

            <Switch
                android:id="@+id/dd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Датчик движения 2" />

           

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1" >

                <Switch
                    android:id="@+id/switch9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_row="3"
                    android:clickable="false"
                    android:text="1" 
                android:textOff="         "
                android:textOn="         "/>

                <Switch
                    android:id="@+id/switch10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="2"
                android:textOff="         "
                android:textOn="         " />

                <Switch
                    android:id="@+id/switch11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:clickable="false"
                    android:text="3"
                android:textOff="         "
                android:textOn="         " />

                <Switch
                    android:id="@+id/switch12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="6"
                    android:clickable="false"
                    android:text="4" 
                android:textOff="         "
                android:textOn="         "/>

                <Space
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="0" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="198dp"
                    android:layout_height="46dp"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_row="2"
                    android:text="Релейные кнопки"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Switch
                    android:id="@+id/switch16"
                    android:layout_column="0"
                    android:layout_gravity="right|top"
                    android:layout_row="6" />

                <Switch
                    android:id="@+id/switch15"
                    android:layout_column="0"
                    android:layout_gravity="right|top"
                    android:layout_row="5" />

                <Switch
                    android:id="@+id/switch14"
                    android:layout_column="0"
                    android:layout_gravity="right|top"
                    android:layout_row="4" />

                <Switch
                    android:id="@+id/switch13"
                    android:layout_column="0"
                    android:layout_gravity="right|top"
                    android:layout_row="3" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_column="0"
                    android:layout_gravity="right|top"
                    android:layout_row="2"
                    android:text="Управление"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </GridLayout>

                <Switch
                android:id="@+id/out1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Выход 1" />

            	<Switch
                android:id="@+id/out2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выход 2" />
            	
            	
             <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="left|top"
                    android:layout_marginTop="14dp"
                    android:layout_row="0"
                    android:text="Аналоговый вход:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/gas"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="right|bottom"
                    android:layout_row="0"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </GridLayout>
            
             	<Switch
                android:id="@+id/trig1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Триггер релейного входа 1" />

            	<Switch
                android:id="@+id/trig2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Триггер релейного входа 2" />
            	
            	<Switch
                android:id="@+id/trig3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Триггер релейного входа 3" />

            
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:text="Прихожая"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>